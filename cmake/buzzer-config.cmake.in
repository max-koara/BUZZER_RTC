# BUZZER CMake config file
#
# This file sets the following variables:
# BUZZER_FOUND - Always TRUE.
# BUZZER_INCLUDE_DIRS - Directories containing the BUZZER include files.
# BUZZER_IDL_DIRS - Directories containing the BUZZER IDL files.
# BUZZER_LIBRARIES - Libraries needed to use BUZZER.
# BUZZER_DEFINITIONS - Compiler flags for BUZZER.
# BUZZER_VERSION - The version of BUZZER found.
# BUZZER_VERSION_MAJOR - The major version of BUZZER found.
# BUZZER_VERSION_MINOR - The minor version of BUZZER found.
# BUZZER_VERSION_REVISION - The revision version of BUZZER found.
# BUZZER_VERSION_CANDIDATE - The candidate version of BUZZER found.

message(STATUS "Found BUZZER-@PROJECT_VERSION@")
set(BUZZER_FOUND TRUE)

find_package(<dependency> REQUIRED)

#set(BUZZER_INCLUDE_DIRS
#    "@CMAKE_INSTALL_PREFIX@/include/@PROJECT_NAME_LOWER@-@PROJECT_VERSION_MAJOR@"
#    ${<dependency>_INCLUDE_DIRS}
#    )
#
#set(BUZZER_IDL_DIRS
#    "@CMAKE_INSTALL_PREFIX@/include/@PROJECT_NAME_LOWER@-@PROJECT_VERSION_MAJOR@/idl")
set(BUZZER_INCLUDE_DIRS
    "@CMAKE_INSTALL_PREFIX@/include/@CPACK_PACKAGE_FILE_NAME@"
    ${<dependency>_INCLUDE_DIRS}
    )
set(BUZZER_IDL_DIRS
    "@CMAKE_INSTALL_PREFIX@/include/@CPACK_PACKAGE_FILE_NAME@/idl")


if(WIN32)
    set(BUZZER_LIBRARIES
        "@CMAKE_INSTALL_PREFIX@/@LIB_INSTALL_DIR@/@CMAKE_SHARED_LIBRARY_PREFIX@@PROJECT_NAME_LOWER@@CMAKE_STATIC_LIBRARY_SUFFIX@"
        ${<dependency>_LIBRARIES}
        )
else(WIN32)
    set(BUZZER_LIBRARIES
        "@CMAKE_INSTALL_PREFIX@/@LIB_INSTALL_DIR@/@CMAKE_SHARED_LIBRARY_PREFIX@@PROJECT_NAME_LOWER@@CMAKE_SHARED_LIBRARY_SUFFIX@"
        ${<dependency>_LIBRARIES}
        )
endif(WIN32)

set(BUZZER_DEFINITIONS ${<dependency>_DEFINITIONS})

set(BUZZER_VERSION @PROJECT_VERSION@)
set(BUZZER_VERSION_MAJOR @PROJECT_VERSION_MAJOR@)
set(BUZZER_VERSION_MINOR @PROJECT_VERSION_MINOR@)
set(BUZZER_VERSION_REVISION @PROJECT_VERSION_REVISION@)
set(BUZZER_VERSION_CANDIDATE @PROJECT_VERSION_CANDIDATE@)

